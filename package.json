{
	"name": "zxz",
	"version": "0.0.0",
	"description": "Dead simple JavaScript, ESM, and TypeScript scripting",
	"author": "Snickbit",
	"license": "MIT",
	"exports": {
		"require": "./dist/index.js",
		"import": "./dist/index.mjs",
		"types": "./dist/index.d.ts"
	},
	"main": "./dist/index.js",
	"module": "./dist/index.mjs",
	"types": "./dist/index.d.ts",
	"bin": {
		"zxz": "./dist/cli.js"
	},
	"files": [
		"dist"
	],
	"scripts": {
		"build": "tsup --minify",
		"check": "pnpm run lint && pnpm run typecheck",
		"clean": "shx rm -rf ./dist",
		"dev": "tsup --watch",
		"lint": "eslint \"**/*.{ts,json,yml,yaml}\" --cache --color",
		"lint:fix": "pnpm run lint --fix",
		"start": "ts-node ./src/cli.ts",
		"typecheck": "tsc --noEmit"
	},
	"dependencies": {
		"@snickbit/node-utilities": "4.4.20",
		"@snickbit/out": "2.0.48",
		"@snickbit/utilities": "3.4.18",
		"fast-glob": "3.2.12",
		"lilconfig": "2.0.6",
		"picomatch": "2.3.1"
	},
	"devDependencies": {
		"@snickbit/eslint-config": "1.3.8",
		"@types/node": "17.0.45",
		"eslint": "8.26.0",
		"tsup": "6.6.3",
		"typescript": "4.8.4"
	},
	"engines": {
		"node": ">= 12"
	},
	"tsup": {
		"entry": [
			"src/index.ts",
			"src/cli.ts"
		],
		"clean": true,
		"dts": true,
		"format": [
			"cjs",
			"esm"
		]
	}
}
